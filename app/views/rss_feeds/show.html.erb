<%= page_title "#{@rss_feed.name}" %>

<div id="<%= dom_id @rss_feed %>">
  <!-- RSS Feed Configuration Card -->
  <div class="card mb-6">
    <div class="card-body">
      <div class="border-b border-neutral-200 pb-4 mb-6">
        <div class="flex flex-col sm:flex-row gap-4 justify-between items-start sm:items-center">
          <div>
            <h1 class="text-h2 text-neutral-900"><%= @rss_feed.name %></h1>
            <p class="text-body text-neutral-700 mt-1">RSS Feed Configuration</p>
          </div>
          <div class="flex gap-3">
            <%= link_to "Refresh Feed", refresh_rss_feed_path(@rss_feed), class: "btn btn-secondary" %>
            <%= link_to "Edit RSS Feed", edit_rss_feed_path(@rss_feed), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      
      <dl class="space-y-6">
        <!-- Description -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <dt class="text-body font-medium text-neutral-700">Description</dt>
          <dd class="text-body text-neutral-900 sm:col-span-2">
            <%= @rss_feed.description.present? ? @rss_feed.description : "No description provided" %>
          </dd>
        </div>

        <!-- RSS URL -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <dt class="text-body font-medium text-neutral-700">RSS Feed URL</dt>
          <dd class="text-body text-neutral-900 sm:col-span-2">
            <div class="flex items-center gap-2">
              <code class="px-2 py-1 bg-neutral-100 text-neutral-900 rounded text-caption font-mono flex-1">
                <%= @rss_feed.url %>
              </code>
            </div>
          </dd>
        </div>

        <!-- Display Type -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <dt class="text-body font-medium text-neutral-700">Display Type</dt>
          <dd class="text-body text-neutral-900 sm:col-span-2">
            <code class="px-2 py-1 bg-neutral-100 text-neutral-900 rounded text-caption font-mono">
              <%= @rss_feed.formatter.to_s.humanize %>
            </code>
          </dd>
        </div>

        <!-- Last Refreshed -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <dt class="text-body font-medium text-neutral-700">Last Refreshed</dt>
          <dd class="text-body text-neutral-900 sm:col-span-2">
            <% if @rss_feed.last_refreshed %>
              <time datetime="<%= @rss_feed.last_refreshed.iso8601 %>" title="<%= @rss_feed.last_refreshed.to_fs(:long) %>">
                <%= time_ago_in_words(@rss_feed.last_refreshed) %> ago
              </time>
            <% else %>
              <span class="text-neutral-500">Never</span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Generated Content Section -->
  <div class="card mb-6">
    <div class="card-body">
      <div class="border-b border-neutral-200 pb-4 mb-6">
        <div class="flex items-center justify-between">
          <h2 class="text-h3 text-neutral-900">Generated Content</h2>
          <div class="flex items-center gap-4">
            <span class="text-caption text-neutral-700">
              <%= pluralize(@rss_feed.content.used.count, 'current item') %>
            </span>
            <% if @rss_feed.content.unused.count > 0 %>
              <div class="flex items-center gap-2">
                <span class="text-caption text-neutral-500 bg-neutral-100 px-2 py-1 rounded">
                  <%= pluralize(@rss_feed.content.unused.count, 'unused item') %>
                </span>
                <%= button_to "Clean Up", cleanup_rss_feed_path(@rss_feed),
                    method: :delete,
                    class: "btn btn-sm btn-secondary",
                    form_class: "inline-block",
                    form: { data: {
                      turbo_confirm: "Are you sure you want to delete all unused content? This action cannot be undone."
                    } } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <% if @rss_feed.content.used.empty? %>
        <div class="text-center py-12">
          <div class="text-neutral-500 mb-4">
            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-body font-medium text-neutral-900 mb-2">No active content available</h3>
          <p class="text-body text-neutral-700 mb-6">This feed has no active content yet. Try refreshing the feed to import content from the RSS source.</p>
          <%= link_to "Refresh Feed Now", refresh_rss_feed_path(@rss_feed), class: "btn btn-primary" %>
        </div>
      <% else %>
        <%= render partial: "contents/grid", locals: {contents: @rss_feed.content.used} %>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="card">
    <div class="card-body">
      <div class="flex flex-col sm:flex-row gap-6 justify-between items-start sm:items-center">
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to "Back to Feeds", feeds_path, class: "btn btn-secondary" %>
        </div>
        
        <div class="flex-shrink-0">
          <%= button_to "Destroy this RSS Feed", rss_feed_path(@rss_feed),
              method: :delete,
              class: "btn btn-danger",
              form_class: "inline-block",
              form: { data: {
                turbo_confirm: "Are you sure you want to delete this RSS feed? This action cannot be undone."
              } } %>
        </div>
      </div>
    </div>
  </div>
</div>
