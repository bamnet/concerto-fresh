<%= page_title "#{@user.display_name} Profile" %>

<div class="flex items-center justify-between mb-6">
  <div class="flex items-center">
    <div class="h-16 w-16 rounded-full flex items-center justify-center text-white font-medium bg-gradient-to-br from-brand to-brand-600 text-2xl mr-4">
      <%= user_initials(@user) %>
    </div>
    <div>
      <h1 class="text-h2 text-neutral-900"><%= @user.display_name %></h1>
      <p class="text-body text-neutral-700"><%= @user.email %></p>
    </div>
  </div>
  <div class="flex space-x-3">
    <% if policy(@user).edit? %>
      <%= link_to edit_user_path(@user), class: "btn-secondary btn-md" do %>
        Edit Profile
      <% end %>
    <% end %>
  </div>
</div>

<!-- User Statistics -->
<div class="card mb-8">
  <div class="card-body p-6">
    <div class="flex items-center space-x-8 text-caption text-neutral-500">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <span class="font-medium text-neutral-900"><%= pluralize(@user.contents.count, 'content') %></span>
      </div>

      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <span class="font-medium text-neutral-900"><%= pluralize(@memberships.count, 'group') %></span>
      </div>
    </div>
  </div>
</div>

<!-- Groups Memberships -->
<div class="card mb-8">
  <div class="card-body p-0">
    <div class="px-6 py-4 border-b border-neutral-200">
      <h3 class="text-h3 text-neutral-900">Group Memberships</h3>
    </div>

    <% if @memberships.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-neutral-100">
            <tr>
              <th class="px-6 py-3 text-left text-label text-neutral-700">Group</th>
              <th class="px-6 py-3 text-left text-label text-neutral-700">Role</th>
              <th class="px-6 py-3 text-left text-label text-neutral-700">Joined</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-neutral-200">
            <% @memberships.each do |membership| %>
              <tr>
                <td class="px-6 py-4">
                  <%= link_to membership.group.name, group_path(membership.group), class: "text-body font-medium text-brand hover:text-brand-600" %>
                </td>
                <td class="px-6 py-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= membership.admin? ? 'bg-brand-100 text-brand-600' : 'bg-neutral-100 text-neutral-800' %>">
                    <%= membership.role.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 text-body text-neutral-500">
                  <%= membership.created_at.strftime("%B %d, %Y") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <h3 class="text-h3 text-neutral-900 mt-4">No group memberships</h3>
        <p class="text-body text-neutral-500 mt-2">This user is not a member of any groups.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Uploaded Content -->
<div class="card mb-8">
  <div class="card-body p-0">
    <div class="px-6 py-4 border-b border-neutral-200">
      <h3 class="text-h3 text-neutral-900">Uploaded Content</h3>
    </div>

    <% if @user.contents.any? %>
      <div class="p-6">
        <%= render partial: "contents/grid", locals: {contents: @user.contents} %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <h3 class="text-h3 text-neutral-900 mt-4">No content yet</h3>
        <p class="text-body text-neutral-500 mt-2">This user has not uploaded any content.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Danger Zone -->
<% if policy(@user).destroy? %>
  <div class="card border-danger-200">
    <div class="card-body p-6">
      <h3 class="text-h3 text-danger-600 mb-2">Danger Zone</h3>
      <p class="text-body text-neutral-700 mb-4">
        Once you delete your account, there is no going back. Please be certain.
      </p>
      <%= button_to "Delete Account", user_path(@user),
          method: :delete,
          class: "btn-danger btn-md",
          form: { data: {
            turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone."
          } } %>
    </div>
  </div>
<% end %>
