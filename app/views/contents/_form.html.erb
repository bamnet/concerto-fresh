<div class="sm:col-span-4">
  <%= form.label :name, class: "frm-label" %>
  <%= form.text_field :name, class: "frm-input" %>
</div>

<div class="sm:col-span-2">
  <%= form.label :duration, class: "frm-label" %>
  <%= form.number_field :duration, class: "frm-input", placeholder: "seconds" %>
</div>

<div class="sm:col-span-3">
  <%= form.label :start_time, class: "frm-label" %>
  <%= form.datetime_field :start_time, class: "frm-input" %>
</div>

<div class="sm:col-span-3">
  <%= form.label :end_time, class: "frm-label" %>
  <%= form.datetime_field :end_time, class: "frm-input" %>
</div>

<div class="sm:col-span-full">
  <%= form.label :feed_ids, "Feeds", class: "frm-label" %>
  <fieldset>
    <div class="mt-3 space-y-3">
    <%= form.collection_check_boxes :feed_ids, Feed.all, :id, :name do |b| %>
      <div class="flex items-center gap-x-3">
        <%= b.check_box class: "h-4 w-4 border-gray-300 rounded text-blue-600 focus:ring-blue-500" %>
        <%= b.label class: "block text-sm font-medium leading-6 text-gray-900" %>
      </div>
    <% end %>
    </div>
  </fieldset>
</div>