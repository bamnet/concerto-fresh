<%= page_title "Content" %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-h2 text-neutral-900">All Content</h1>
    <p class="text-body text-neutral-700 mt-1">Manage and organize your digital signage content</p>
  </div>
  <%= link_to new_content_path, class: "btn-primary btn-md" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
    New Content
  <% end %>
</div>

<%= render partial: "grid", locals: {contents: @contents} %>
