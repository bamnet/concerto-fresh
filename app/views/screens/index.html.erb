<%= page_title "Screens" %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-h2 text-neutral-900">All Screens</h1>
    <p class="text-body text-neutral-700 mt-1">Manage your digital signage displays and their configurations</p>
  </div>
  <%= link_to new_screen_path, class: "btn-primary" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
    New Screen
  <% end %>
</div>

<div id="screens" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
  <% @screens.each do |screen| %>
    <%= link_to screen, class: "group block" do %>
      <div class="card hover:shadow-md transition-shadow duration-200">
        <div class="card-body text-center">
          <div class="mb-4">
            <%= heroicon('desktop-computer', class: 'w-16 h-16 mx-auto text-neutral-400 group-hover:text-brand transition-colors') %>
          </div>
          
          <h3 class="text-h4 text-neutral-900 group-hover:text-brand transition-colors mb-2">
            <%= screen.name %>
          </h3>
          
          <div class="space-y-2 text-caption text-neutral-500">
            <div class="flex items-center justify-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-success">Online</span>
            </div>
            
            <% if screen.respond_to?(:location) && screen.location.present? %>
              <div class="flex items-center justify-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= screen.location %>
              </div>
            <% end %>
            
            <div>Last seen <%= time_ago_in_words(screen.updated_at) %> ago</div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  
  <% if @screens.empty? %>
    <div class="col-span-full">
      <div class="text-center py-12">
        <%= heroicon('desktop-computer', class: 'mx-auto h-12 w-12 text-neutral-400') %>
        <h3 class="text-h3 text-neutral-900 mt-4">No screens yet</h3>
        <p class="text-body text-neutral-500 mt-2">Add your first digital signage display to get started.</p>
        <%= link_to new_screen_path, class: "btn-primary mt-4" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Screen
        <% end %>
      </div>
    </div>
  <% end %>
</div>
