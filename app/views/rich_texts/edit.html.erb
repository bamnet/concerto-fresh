<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <div class="mb-4">
      <nav class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
        <%= link_to "Content", contents_path, class: "hover:text-gray-700" %>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= link_to @rich_text.name.presence || "Text Content", @rich_text, class: "hover:text-gray-700" %>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-900 font-medium">Edit</span>
      </nav>
      
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Edit Text Content</h1>
          <p class="text-gray-600 mt-1">Update the text content and formatting settings</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "View Content", @rich_text,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <!-- Form -->
    <%= render "form", rich_text: @rich_text %>
  </div>
</div>
